  <section class="relative bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-light-text dark:text-dark-text mb-6">
          About Us
        </h1>
        <p class="text-xl text-light-muted dark:text-dark-muted">
          Discover our story, values, and commitment to excellence
        </p>
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-16 bg-light-card dark:bg-dark-card">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-4xl font-bold mb-8 text-light-text dark:text-dark-text">Our Story</h2>
        <div class="space-y-6 text-light-muted dark:text-dark-muted leading-relaxed text-lg">
